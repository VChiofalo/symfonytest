{% extends 'base.html.twig' %}

{% block title %}Liste des écoles{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des écoles</h1>
    <a href="{{ path('app_school_add') }}">Ajouter une école</a>
    <table>
        <tr>
            <td>Nom</td>
            <td>Coordonnées</td>
            <td>Actions</td>
        </tr>

        {% for school in listSchool %}
        <tr>
            <td>{{school.name}}</td>
            <td>{{school.address}}</td>
            <td><a href="{{ path('app_school_details', {'id':school.id} )}}">Détail</a></td>
            <td><a href="{{ path('app_school_edit', {'id':school.id} )}}">Modification</a></td>
            <td><a href="{{ path('app_school_remove', {'id':school.id} )}}">Supprimer</a></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}